{
  "compilerOptions": {
    // "target": "es5",                                     
    "lib": ["dom", "dom.iterable", "esnext"],  
    "allowJs": true,                               
    "noEmit": true,                                       
    "strict": true,                                   
    "jsx": "react-jsx", 
    "moduleResolution": "node",                    
    "resolveJsonModule": true,                     
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
